#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int n;

	cout << "Введите число: ";
	cin >> n;

	if (n == 0)
	{
		cout << "Число равно 0 = " << n << endl;
	}

	else if (n < 0)
	{
		cout << "Число отричательное: " << n << endl;
	}

	else
	{
		cout << "Число положительное: " << n << endl;
	}


	return 0;
}
